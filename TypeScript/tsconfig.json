{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true, // Add this line
    "declarationDir": "./dist/types" // Optional: specify a directory for declaration files
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
